@model IEnumerable<DataBaseContext.Model.Company>

@{
    ViewBag.Title = "Configuración Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Nuevo Nombre Empresa", "Create")
</p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberPhone)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberPhone)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CompanyId }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.CompanyId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.CompanyId })
            </td>
        </tr>
    }

</table>
